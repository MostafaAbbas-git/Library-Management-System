{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["ES6", "DOM"],
    "types": ["jest"],
    "allowJs": true,
    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "./dist", "spec", "migrations"],

  "include": ["./src/**/*"]
}
